<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/aqua_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/serif_bold"
            android:maxLines="1"
            android:textColor="@color/wedge_wood"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_polygon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_triangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_polygon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/serif_regular"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/image_polygon"
            app:layout_constraintStart_toEndOf="@id/image_polygon"
            app:layout_constraintTop_toTopOf="@id/image_polygon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="-24dp"
            android:layout_marginBottom="-16dp"
            android:src="@drawable/ic_hexagon"
            app:layout_constraintBottom_toTopOf="@id/imge_square"
            app:layout_constraintEnd_toStartOf="@id/imge_square" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imge_square"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-8dp"
            android:src="@drawable/ic_square"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>